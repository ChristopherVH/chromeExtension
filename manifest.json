{
  "manifest_version": 2,

  "name": "SimpleNotes",
  "description": "This extension allows for quick and simple copy paste notes",
  "version": "1.0",
  "icons": { "32": "note.png"},
  "browser_action": {
    "default_icon": "note.png",
    "default_title": "SimpleNotes"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "contextMenus",
    "*://*/*",
    "https://ajax.googleapis.com/",
    "identity"
  ],
  "oauth2": {
    "client_id": "6344508761-1uii1p3je2jnt4innp07fbk8rvq66976.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive"
    ]
  },
  "background": {
    "scripts": ["background.js", "jquery-3.1.0.min.js"],
    "persistent": false
  },
  "browser_action": {
        "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' https://*.google.com https://*.google.com; object-src 'self'",
  "commands": {
          "setHeader": {
            "suggested_key": {
              "default": "Alt+Shift+H",
              "mac": "Alt+Shift+H"
            },
            "description": "Sets header in notes",
            "global" : "true"
          },
          "setTitle": {
            "suggested_key": {
              "default": "Alt+Shift+T",
              "mac": "Alt+Shift+T"
            },
            "description": "Sets Title in notes",
            "global" : "true"
          },
          "setSubsection": {
            "suggested_key": {
              "default": "Alt+Shift+S",
              "mac": "Alt+Shift+S"
            },
            "description": "Sets Subsection in notes",
            "global" : "true"
          },
          "setDetail": {
            "suggested_key": {
              "default": "Alt+Shift+D",
              "mac": "Alt+Shift+D"
            },
            "description": "Sets Detail in notes",
            "global" : "true"
          }
        }
}
